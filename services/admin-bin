#!/bin/sh

CFG=/etc/msod/MSODConfig.json
PIDFILE=/var/run/admin.pid
LOGFILE=/var/log/admin.log
PYTHON=/usr/local/bin/python2.7
PYTHONPATH=/usr/local/lib/python2.7/site-packages/:/opt/SpectrumBrowser/flask

OPTIND=1
while getopts "p:l:us:usg:" opt; do
    case "$opt" in
        p)  PIDFILE=$OPTARG
            ;;
        l)  LOGFILE=$OPTARG
            ;;
        us) RUN_AS=$OPTARG
            ;;
        usg) RUN_AS_GROUP=$OPTARG
            ;;
    esac
done
shift "$((OPTIND-1))"

if [ ! -f "$CFG" ]; then
    exit -1
fi

SB_HOME=$(
    ${PYTHON} -c 'import json; print json.load(open("'$CFG'"))["SPECTRUM_BROWSER_HOME"]'
)

cmd="nohup ${PYTHON} ${SB_HOME}/flask/Admin.py --pidfile ${PIDFILE} >>${LOGFILE} 2>&1 &"
sudo -u ${RUN_AS} -g ${RUN_AS_GROUP} bash -c "$cmd"
